    "mounts": [
        {
            "source": "${localEnv:HOME}/.config/devcontainer_rc",
            "target": "/devcontainer_rc",
            "type": "bind"
        }
    ],
    "onCreateCommand": "bash .devcontainer/features/onCreateCommand.sh"
